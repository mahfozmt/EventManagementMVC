@model ASP_MVC_M8_project.Models.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" style="margin-top:10px">
        <div class="col offset-l3 s8 z-depth-2">
            <div class="col s8 offset-l2 ">
                <h4 class="center-align">Add Customer</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text" })
                        @Html.LabelFor(model => model.Name)
                    </div>
                </div>


                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.FatherName)
                        @Html.ValidationMessageFor(model => model.FatherName, "", new { @class = "red-text" })
                        @Html.LabelFor(model => model.FatherName)
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Address)
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "red-text" })
                        @Html.LabelFor(model => model.Address)
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Mobile)
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "red-text" })
                        @Html.LabelFor(model => model.Mobile)
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text" })
                        @Html.LabelFor(model => model.Email)
                    </div>
                </div>

                <div class="row ">
                    <div class="input-field col s5 ">
                        <div>

                            @Html.ActionLink("< Back to list", "Index", "Customers", new { @class = "btn blue lighten-2" })
                        </div>
                    </div>
                    <div class="input-field col s4">


                        <button class="btn blue  lighten-2 waves-effect waves-light" type="submit">
                            Add
                            <i class="material-icons right">send</i>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

