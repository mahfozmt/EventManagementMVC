@model ASP_MVC_M8_project.Models.ScheduleEvent

@{
    ViewBag.Title = "Create";
}


<h2 class="center">Schedule Event</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="row">
        <div class="container z-depth-1">

            @Html.ValidationSummary(true, "", new { @class = "red-text" })

            <div class="row">
                <div class="input-field col s12">
                    @Html.DropDownListFor(model => model.EventTypeId, ViewBag.EventTypeId as SelectList, "Select Event Type")
                    @Html.LabelFor(model => model.Event_Type.EventType)
                    @Html.ValidationMessageFor(model => model.EventTypeId, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.DropDownListFor(model => model.CustomerId, ViewBag.CustomerId as SelectList, "Select Customer")
                    @Html.Label("Customer Name")
                    @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "red-text" })
                </div>
            </div>

            <div class="row">

                <div class="input-field col s6">
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "red-text" })
                    @Html.LabelFor(model => model.StartTime)
                </div>
                <div class="input-field col s6">
                    @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                    @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "red-text" })
                    @Html.LabelFor(model => model.EndTime)
                </div>

            </div>


            <div class="row ">
                <div class="input-field col s3 offset-l3 ">
                    <div>

                        @Html.ActionLink("< Back to list", "Index", null, new { @class = "btn blue lighten-2" })
                    </div>
                </div>
                <div class="input-field col s3 ">


                    <button class="btn blue  lighten-2 waves-effect waves-light" type="submit">
                        Book Event
                        <i class="material-icons right">send</i>
                    </button>
                </div>

            </div>
        </div>
    </div>



}


@section scripts{


    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker();
            $('select').formSelect();
        })
    </script>
}